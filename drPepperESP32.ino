void setup() {

  FastLED.addLeds<WS2812B, DATA_PIN, GRB>(leds, NUM_LEDS);
  FastLED.setBrightness(brightness);
  
  initialSweepTest(); //run sweep test
  
}

void loop() {

  displaySimpleLogo(); //displays basic dr pepper logo
  drPepperLogoWithBackground();
  drPepperLogoWithColors();

}

//this function starts a basic sweep of green then "black" to test if all the leds work and to clear them all
void initialSweepTest() {
  
  for (int dot = 0; dot < NUM_LEDS; dot++){
    leds[dot] = CRGB::Green;
    FastLED.show();
    delay(1);
  }
  
  for (int dot = NUM_LEDS; dot > 0; dot--){
    leds[dot] = CRGB::Black;
    FastLED.show();
    delay(1);
  }
  
}


//this function goes throught the drPepperSizeArray array and turns maroon if the bool is 1 and stays off if 0
void displaySimpleLogo() {
  
  for (int i = 0; i < drPepperArraySize; i++){
    
    if (drPepperLogo[i]) {
      leds[i] = CRGB::Maroon;
      FastLED.show();
      delay(1);
    }
    
  }
  
}

//this functions adds a "background" to the logo by turning on the leds that have are set to 0
void drPepperLogoWithBackground(){
  
  for (int i = 0; i < drPepperArraySize; i++){
    if (drPepperLogo[i] == 0) {
      leds[i] = CRGB::Blue;
      FastLED.show();
      delay(1);
    }
  }

  for (int i = drPepperArraySize; i > 0; i--){
    if (drPepperLogo[i] == 0) {
      leds[i] = CRGB::Green;
      FastLED.show();
      delay(1);
    }
  }
  
}

void drPepperLogoWithColors(){

  for (int i = 0; i < drPepperArraySize; i++){
    
    if (drPepperLogo[i]) {
      if (i % 2 == 0) {
        leds[i] = CRGB::Green;
        FastLED.show();
        delay(1);
      } else {        
        leds[i] = CRGB::Blue;
        FastLED.show();
        delay(1);
      }
    }
    
  }
  
}
